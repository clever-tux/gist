<% model_class = Gist %>
<div class="page-header">
  <h1><%= t '.title', default: model_class.model_name.human.titleize %></h1>
</div>

<h3 class="muted"><%= @gist.description %></h3>

<div class="contents">
  <%= render partial: 'content', collection: @gist.contents %>
</div>

<div class="comments">
  <%= render partial: 'comment', collection: @gist.comments %>
</div>

<div class="comment-form">
  <%= render partial: 'comment_form' %>
</div>

<%= link_to t('.back', default: t("helpers.links.back")),
              gists_path, class: 'btn btn-default'  %>
<%= link_to t('.edit', default: t("helpers.links.edit")),
              edit_gist_path(@gist), class: 'btn btn-default' %>
<%= link_to t('.destroy', default: t("helpers.links.destroy")),
              gist_path(@gist),
              method: 'delete',
              data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) },
              class: 'btn btn-danger' %>
