<div class="panel panel-default">
  <%= form_for @comment, html: { class: "form-horizontal gist" } do |f| %>
    <div class="panel-body">
      <%= f.hidden_field :gist_id, value: @comment.gist_id %>
      <%= f.text_area :body, rows: 5, class: 'form-control', placeholder: 'Leave a comment' %>
    </div>
    <div class="panel-footer">
      <%= f.submit 'Comment', class: 'btn btn-success' %>
    </div>
  <% end %>
</div>